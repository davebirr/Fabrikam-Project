@page "/invoices"
@rendermode InteractiveServer
@using FabrikamContracts.DTOs.Invoices
@using FabrikamDashboard.Services
@inject FabrikamApiClient ApiClient
@inject DashboardStateService StateService
@inject ILogger<Invoices> Logger

<PageTitle>Invoices - Fabrikam Dashboard</PageTitle>

<div class="invoices-container">
    <div class="invoices-header">
        <h1 class="invoices-title">üí∞ Invoices</h1>
        <div class="invoices-filters">
            <div class="timeframe-selector">
                <label for="timeframe">üìÖ Timeframe:</label>
                <select id="timeframe" class="filter-select" @bind="_selectedTimeframe" @bind:after="OnTimeframeChanged">
                    <option value="7days">Last 7 Days</option>
                    <option value="30days">Last 30 Days</option>
                    <option value="90days">Last 90 Days</option>
                    <option value="365days">Last Year</option>
                    <option value="all">All Time</option>
                </select>
            </div>
            <select class="filter-select" @onchange="FilterByStatus">
                <option value="">All Statuses</option>
                <option value="Pending">Pending</option>
                <option value="Approved">Approved</option>
                <option value="Paid">Paid</option>
                <option value="Rejected">Rejected</option>
                <option value="Duplicate">Duplicate</option>
                <option value="Cancelled">Cancelled</option>
            </select>
            <select class="filter-select" @onchange="FilterByVendor">
                <option value="">All Vendors</option>
                @foreach (var vendor in _uniqueVendors.OrderBy(v => v))
                {
                    <option value="@vendor">@vendor</option>
                }
            </select>
            <button class="refresh-button" @onclick="LoadInvoices">üîÑ Refresh</button>
        </div>
    </div>

    @if (_isLoading)
    {
        <div class="loading-container">
            <div class="loading-spinner">‚è≥</div>
            <p>Loading invoices...</p>
        </div>
    }
    else if (_hasError)
    {
        <div class="error-container">
            <div class="error-icon">‚ö†Ô∏è</div>
            <h3>Unable to Load Invoices</h3>
            <p>@_errorMessage</p>
            <button class="retry-button" @onclick="LoadInvoices">Try Again</button>
        </div>
    }
    else if (_filteredInvoices.Count == 0)
    {
        <div class="empty-state">
            <div class="empty-icon">üí∞</div>
            <h3>No Invoices Found</h3>
            <p>No invoices match your current filters.</p>
        </div>
    }
    else
    {
        <!-- Stats Cards -->
        <div class="invoices-stats">
            <div class="stat-card stat-pending">
                <div class="stat-value">@_filteredInvoices.Count(i => i.Status == "Pending")</div>
                <div class="stat-label">Pending</div>
            </div>
            <div class="stat-card stat-approved">
                <div class="stat-value">@_filteredInvoices.Count(i => i.Status == "Approved")</div>
                <div class="stat-label">Approved</div>
            </div>
            <div class="stat-card stat-paid">
                <div class="stat-value">@_filteredInvoices.Count(i => i.Status == "Paid")</div>
                <div class="stat-label">Paid</div>
            </div>
            <div class="stat-card stat-rejected">
                <div class="stat-value">@_filteredInvoices.Count(i => i.Status == "Rejected")</div>
                <div class="stat-label">Rejected</div>
            </div>
            <div class="stat-card stat-duplicate">
                <div class="stat-value">@_filteredInvoices.Count(i => i.Status == "Duplicate")</div>
                <div class="stat-label">Duplicate</div>
            </div>
            <div class="stat-card stat-cancelled">
                <div class="stat-value">@_filteredInvoices.Count(i => i.Status == "Cancelled")</div>
                <div class="stat-label">Cancelled</div>
            </div>
        </div>

        <!-- Invoices Table -->
        <div class="invoices-table">
            <table>
                <thead>
                    <tr>
                        <th>Invoice #</th>
                        <th>Vendor</th>
                        <th>Invoice Date</th>
                        <th>Due Date</th>
                        <th>Amount</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invoice in _filteredInvoices.OrderByDescending(i => i.InvoiceDate))
                    {
                        <tr class="invoice-row">
                            <td class="invoice-id">
                                <span class="invoice-number">@invoice.InvoiceNumber</span>
                            </td>
                            <td>
                                <div class="vendor-info">
                                    <div class="vendor-name">@invoice.Vendor</div>
                                    @if (!string.IsNullOrEmpty(invoice.CreatedBy))
                                    {
                                        <div class="created-by">Submitted by @invoice.CreatedBy</div>
                                    }
                                </div>
                            </td>
                            <td class="invoice-date">
                                @invoice.InvoiceDate.ToString("MMM d, yyyy")
                            </td>
                            <td class="due-date">
                                @invoice.DueDate.ToString("MMM d, yyyy")
                                @if (invoice.DueDate < DateTime.UtcNow && invoice.Status != "Paid" && invoice.Status != "Cancelled")
                                {
                                    <span class="overdue-badge">‚ö†Ô∏è Overdue</span>
                                }
                            </td>
                            <td class="invoice-amount">
                                $@invoice.TotalAmount.ToString("N2")
                            </td>
                            <td>
                                <span class="status-badge status-@invoice.Status.ToLower()">
                                    @invoice.Status
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="invoices-summary">
            Showing @_filteredInvoices.Count of @_invoices.Count invoices
            @if (_filteredInvoices.Count > 0)
            {
                <span> ‚Ä¢ Total Amount: $@_filteredInvoices.Sum(i => i.TotalAmount).ToString("N2")</span>
            }
        </div>
    }
</div>

@code {
    private List<InvoiceDto> _invoices = new();
    private List<InvoiceDto> _filteredInvoices = new();
    private List<string> _uniqueVendors = new();
    private bool _isLoading = true;
    private bool _hasError = false;
    private string _errorMessage = string.Empty;
    private string _selectedStatus = string.Empty;
    private string _selectedVendor = string.Empty;
    private string _selectedTimeframe = "365days"; // Default

    protected override async Task OnInitializedAsync()
    {
        // Use the timeframe from state service (persists across pages)
        _selectedTimeframe = StateService.CurrentTimeframe;
        await LoadInvoices();
    }

    private async Task LoadInvoices()
    {
        _isLoading = true;
        _hasError = false;
        _errorMessage = string.Empty;

        try
        {
            var (fromDate, toDate) = GetDateRange(_selectedTimeframe);
            _invoices = await ApiClient.GetInvoicesAsync(null, null, fromDate, toDate);
            _uniqueVendors = _invoices.Select(i => i.Vendor).Distinct().ToList();
            ApplyFilters();
        }
        catch (Exception ex)
        {
            _hasError = true;
            _errorMessage = ex.Message;
            Logger.LogError(ex, "Error loading invoices");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void FilterByStatus(ChangeEventArgs e)
    {
        _selectedStatus = e.Value?.ToString() ?? string.Empty;
        ApplyFilters();
    }

    private void FilterByVendor(ChangeEventArgs e)
    {
        _selectedVendor = e.Value?.ToString() ?? string.Empty;
        ApplyFilters();
    }

    private void ApplyFilters()
    {
        _filteredInvoices = _invoices;

        if (!string.IsNullOrEmpty(_selectedStatus))
        {
            _filteredInvoices = _filteredInvoices.Where(i => i.Status == _selectedStatus).ToList();
        }

        if (!string.IsNullOrEmpty(_selectedVendor))
        {
            _filteredInvoices = _filteredInvoices.Where(i => i.Vendor == _selectedVendor).ToList();
        }
    }

    private async Task OnTimeframeChanged()
    {
        // Update the state service (persists across pages)
        StateService.UpdateTimeframe(_selectedTimeframe);
        
        // Reload invoices with new timeframe
        await LoadInvoices();
    }

    private static (DateTime? fromDate, DateTime? toDate) GetDateRange(string? timeframe)
    {
        if (string.IsNullOrEmpty(timeframe) || timeframe == "all")
        {
            return (null, null); // No filtering
        }

        var toDate = DateTime.UtcNow;
        var fromDate = timeframe.ToLower() switch
        {
            "7days" or "week" => toDate.AddDays(-7),
            "30days" or "month" => toDate.AddDays(-30),
            "90days" or "quarter" => toDate.AddDays(-90),
            "365days" or "year" => toDate.AddDays(-365),
            _ => toDate.AddDays(-365) // Default to year
        };

        return (fromDate, toDate);
    }
}

