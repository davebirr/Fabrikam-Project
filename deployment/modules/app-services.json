{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Shared App Service Plan and Web Apps for API, MCP, and SIM services (workshop-optimized)"
  },
  "parameters": {
    "location": {
      "type": "string"
    },
    "environment": {
      "type": "string"
    },
    "skuName": {
      "type": "string"
    },
    "databaseProvider": {
      "type": "string"
    },
    "authenticationMode": {
      "type": "string"
    },
    "appServicePlanName": {
      "type": "string",
      "metadata": {
        "description": "Shared App Service Plan name for all three apps"
      }
    },
    "apiAppName": {
      "type": "string"
    },
    "mcpAppName": {
      "type": "string"
    },
    "simAppName": {
      "type": "string"
    },
    "keyVaultName": {
      "type": "string"
    },
    "jwtSecretName": {
      "type": "string"
    },
    "sqlConnectionSecretName": {
      "type": "string"
    },
    "apiUrl": {
      "type": "string"
    }
  },
  "variables": {
    "isAuthenticationEnabled": "[not(equals(parameters('authenticationMode'), 'Disabled'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('skuName')]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      },
      "tags": {
        "Purpose": "Shared App Service Plan for API, MCP, and SIM",
        "CostOptimized": "true"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[parameters('apiAppName')]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "identity": {
        "type": "SystemAssigned"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "linuxFxVersion": "DOTNETCORE|9.0",
          "alwaysOn": "[if(equals(parameters('skuName'), 'F1'), false(), true())]",
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2",
          "appSettings": [
            {
              "name": "ASPNETCORE_ENVIRONMENT",
              "value": "[parameters('environment')]"
            },
            {
              "name": "Database__Provider",
              "value": "[parameters('databaseProvider')]"
            },
            {
              "name": "ConnectionStrings__DefaultConnection",
              "value": "[if(equals(parameters('databaseProvider'), 'SqlServer'), concat('@Microsoft.KeyVault(VaultName=', parameters('keyVaultName'), ';SecretName=', parameters('sqlConnectionSecretName'), ')'), '')]"
            },
            {
              "name": "Authentication__Strategy",
              "value": "[if(variables('isAuthenticationEnabled'), 'AspNetIdentity', 'Disabled')]"
            },
            {
              "name": "Authentication__Mode",
              "value": "[parameters('authenticationMode')]"
            },
            {
              "name": "Authentication__AspNetIdentity__Jwt__Issuer",
              "value": "[parameters('apiUrl')]"
            },
            {
              "name": "Authentication__AspNetIdentity__Jwt__Audience",
              "value": "fabrikam-api"
            },
            {
              "name": "Authentication__AspNetIdentity__Jwt__SecretKey",
              "value": "[if(variables('isAuthenticationEnabled'), concat('@Microsoft.KeyVault(VaultName=', parameters('keyVaultName'), ';SecretName=', parameters('jwtSecretName'), ')'), '')]"
            },
            {
              "name": "WEBSITE_RUN_FROM_PACKAGE",
              "value": "1"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[parameters('mcpAppName')]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "identity": {
        "type": "SystemAssigned"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "[resourceId('Microsoft.Web/sites', parameters('apiAppName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "linuxFxVersion": "DOTNETCORE|9.0",
          "alwaysOn": "[if(equals(parameters('skuName'), 'F1'), false(), true())]",
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2",
          "appSettings": [
            {
              "name": "ASPNETCORE_ENVIRONMENT",
              "value": "[parameters('environment')]"
            },
            {
              "name": "Authentication__Mode",
              "value": "[parameters('authenticationMode')]"
            },
            {
              "name": "Authentication__Strategy",
              "value": "[if(variables('isAuthenticationEnabled'), 'AspNetIdentity', 'Disabled')]"
            },
            {
              "name": "Authentication__AspNetIdentity__Jwt__Issuer",
              "value": "[parameters('apiUrl')]"
            },
            {
              "name": "Authentication__AspNetIdentity__Jwt__Audience",
              "value": "fabrikam-api"
            },
            {
              "name": "Authentication__AspNetIdentity__Jwt__SecretKey",
              "value": "[if(variables('isAuthenticationEnabled'), concat('@Microsoft.KeyVault(VaultName=', parameters('keyVaultName'), ';SecretName=', parameters('jwtSecretName'), ')'), '')]"
            },
            {
              "name": "FabrikamApi__BaseUrl",
              "value": "[parameters('apiUrl')]"
            },
            {
              "name": "WEBSITE_RUN_FROM_PACKAGE",
              "value": "1"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[parameters('simAppName')]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "identity": {
        "type": "SystemAssigned"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "[resourceId('Microsoft.Web/sites', parameters('apiAppName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "linuxFxVersion": "DOTNETCORE|9.0",
          "alwaysOn": "[if(equals(parameters('skuName'), 'F1'), false(), true())]",
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2",
          "appSettings": [
            {
              "name": "ASPNETCORE_ENVIRONMENT",
              "value": "[parameters('environment')]"
            },
            {
              "name": "FabrikamApi__BaseUrl",
              "value": "[parameters('apiUrl')]"
            },
            {
              "name": "WEBSITE_RUN_FROM_PACKAGE",
              "value": "1"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2021-02-01",
      "name": "[concat(parameters('apiAppName'), '/logs')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('apiAppName'))]"
      ],
      "properties": {
        "applicationLogs": {
          "fileSystem": {
            "level": "Information"
          }
        },
        "httpLogs": {
          "fileSystem": {
            "enabled": true,
            "retentionInMb": 35,
            "retentionInDays": 7
          }
        },
        "detailedErrorMessages": {
          "enabled": true
        },
        "failedRequestsTracing": {
          "enabled": true
        }
      }
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2021-02-01",
      "name": "[concat(parameters('mcpAppName'), '/logs')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('mcpAppName'))]"
      ],
      "properties": {
        "applicationLogs": {
          "fileSystem": {
            "level": "Information"
          }
        },
        "httpLogs": {
          "fileSystem": {
            "enabled": true,
            "retentionInMb": 35,
            "retentionInDays": 7
          }
        },
        "detailedErrorMessages": {
          "enabled": true
        },
        "failedRequestsTracing": {
          "enabled": true
        }
      }
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2021-02-01",
      "name": "[concat(parameters('simAppName'), '/logs')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('simAppName'))]"
      ],
      "properties": {
        "applicationLogs": {
          "fileSystem": {
            "level": "Information"
          }
        },
        "httpLogs": {
          "fileSystem": {
            "enabled": true,
            "retentionInMb": 35,
            "retentionInDays": 7
          }
        },
        "detailedErrorMessages": {
          "enabled": true
        },
        "failedRequestsTracing": {
          "enabled": true
        }
      }
    }
  ],
  "outputs": {
    "apiAppName": {
      "type": "string",
      "value": "[parameters('apiAppName')]"
    },
    "mcpAppName": {
      "type": "string",
      "value": "[parameters('mcpAppName')]"
    },
    "simAppName": {
      "type": "string",
      "value": "[parameters('simAppName')]"
    },
    "apiAppPrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('apiAppName')), '2021-02-01', 'Full').identity.principalId]"
    },
    "mcpAppPrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('mcpAppName')), '2021-02-01', 'Full').identity.principalId]"
    },
    "simAppPrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('simAppName')), '2021-02-01', 'Full').identity.principalId]"
    }
  }
}
